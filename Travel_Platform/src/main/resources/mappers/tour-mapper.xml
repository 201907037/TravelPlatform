	<!-- 유진 - 관리자 여행지 추가 쿼리문 (2024.06.12) -->
	<insert id="insertTourSpotData" 
	        parameterType="tsd">
		INSERT ALL 
			   INTO TOUR (TOUR_NO, 
					 	  TOUR_NAME, 
					 	  ADDRESS, 
					 	  THUMB_IMG, 
					 	  TOUR_TYPE, 
					 	  MAP_X, 
					 	  MAP_Y) 
					VALUES(TOUR_DNO.CURRVAL, 
						   #{tourName}, 
						   #{address}, 
						   #{thumbImg}, 
						   #{tourtype}, 
						   #{mapX}, 
						   #{mapY}) 
			   INTO TOUR_SPOT (SPOT_NO, 
					 	  	   SEASON, 
					 	  	   USE_TIME, 
					 	  	   TEL, 
					 	  	   PET, 
					 	  	   REF_TNO) 
					VALUES(DETAIL_NO.NEXTVAL, 
						   #{season}, 
						   #{useTime}, 
						   #{tel}, 
						   #{pet}, 
						   TOUR_DNO.NEXTVAL)
				SELECT * FROM DUAL
	</insert>
	<insert id="insertLodgingData" 
	        parameterType="lod">
		INSERT ALL 
			   INTO TOUR (TOUR_NO, 
					 	  TOUR_NAME, 
					 	  ADDRESS, 
