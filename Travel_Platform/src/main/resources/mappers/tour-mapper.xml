	<!-- 유진 - 관리자 여행지 목록 조회 쿼리문 (2024.06.10) -->
	<select id="adminTourList" 
			resultMap="tourResultSet">
		SELECT TOUR_NO, TOUR_NAME, ADDRESS, 
			   TO_CHAR(ADD_DATE, 'YYYY-MM-DD') AS ADD_DATE, 
			   CONTENT_ID, THUMB_IMG, MAP_X, MAP_Y, 
			   TOUR_TYPE, STATUS, REF_AREA, REF_CITY 
		  FROM TOUR 
		 WHERE STATUS = 'Y'
	</select>
	<!-- 김동현 -도시 목록 조회 쿼리문(2024.06.10) -->
	<select id="selectCity"
			parameterType="_int"
			resultMap="resultSetCity">
	SELECT *
	FROM CITY
	WHERE REF_LCODE = #{code}
	</select>
	
	<!-- 유진 - 관리자 여행지 추가 쿼리문 (2024.06.12) -->
	<insert id="insertTourSpotData" 
	        parameterType="tsd">
		INSERT ALL 
			   INTO TOUR (TOUR_NO, 
					 	  TOUR_NAME, 
					 	  ADDRESS, 
					 	  THUMB_IMG, 
					 	  TOUR_TYPE) 
					VALUES(TOUR_DNO.CURRVAL, 
						   #{tourName}, 
						   #{address}, 
						   #{thumbImg}, 
						   #{tourtype}) 
			   INTO TOUR_SPOT (SPOT_NO, 
					 	  	   SEASON, 
					 	  	   USE_TIME, 
					 	  	   TEL, 
					 	  	   PET, 
					 	  	   REF_TNO) 
					VALUES(DETAIL_NO.NEXTVAL, 
						   #{season}, 
						   #{useTime}, 
						   #{tel}, 
						   #{pet}, 
						   TOUR_DNO.NEXTVAL)
				SELECT * FROM DUAL
	</insert>
	<insert id="insertLodgingData" 
	        parameterType="lod">
		INSERT ALL 
			   INTO TOUR (TOUR_NO, 
					 	  TOUR_NAME, 
					 	  ADDRESS, 
					 	  THUMB_IMG, 
					 	  TOUR_TYPE) 
					VALUES(TOUR_DNO.CURRVAL, 
						   #{tourName}, 
						   #{address}, 
						   #{thumbImg}, 
						   #{tourtype}) 
			   INTO LODGING (L_NO, 
					 	  	 ROOM_TYPE, 
					 	  	 CHECK_IN, 
					 	  	 CHECK_OUT, 
					 	  	 COOK, 
					 	  	 TEL, 
					 	  	 PARKING, 
					 	  	 REF_TNO) 
					VALUES(A_DNO.NEXTVAL, 
						   #{roomType}, 
						   #{checkIn}, 
						   #{checkOut}, 
						   #{cook}, 
						   #{tel}, 
						   #{parking}, 
						   TOUR_DNO.NEXTVAL)
				SELECT * FROM DUAL
	</insert>
	<insert id="insertRestaurantData" 
	        parameterType="rd">
		INSERT ALL 
			   INTO TOUR (TOUR_NO, 
					 	  TOUR_NAME, 
					 	  ADDRESS, 
					 	  THUMB_IMG, 
					 	  TOUR_TYPE) 
					VALUES(TOUR_DNO.CURRVAL, 
						   #{tourName}, 
						   #{address}, 
						   #{thumbImg}, 
						   #{tourtype}) 
			   INTO RESTAURANT (RD_NO, 
					 	  	    KID_ROOM, 
					 	  	    FIRST_MENU, 
					 	  	    TREAT_MENU, 
					 	  	    TEL, 
					 	  	    OPEN_TIME, 
					 	  	    REST_DATE, 
					 	  	    REF_TNO) 
					VALUES(R_DNO.NEXTVAL, 
						   #{kidRoom}, 
						   #{firstMenu}, 
						   #{treatMenu}, 
						   #{tel}, 
						   #{openTime}, 
						   #{restDate}, 
						   TOUR_DNO.NEXTVAL)
				SELECT * FROM DUAL
	</insert>
	<insert id="insertLeportsData" 
			parameterType="led">
		INSERT ALL 
			   INTO TOUR (TOUR_NO, 
					 	  TOUR_NAME, 
					 	  ADDRESS, 
					 	  THUMB_IMG, 
					 	  TOUR_TYPE) 
					VALUES(TOUR_DNO.CURRVAL, 
						   #{tourName}, 
						   #{address}, 
						   #{thumbImg}, 
						   #{tourtype}) 
			   INTO LEPORTS (L_NO, 
					 	  	 USE_TIME, 
					 	  	 PARKING, 
					 	  	 PET, 
					 	  	 TEL, 
					 	  	 REF_TNO) 
					VALUES(L_DNO.NEXTVAL, 
						   #{useTime}, 
						   #{parking}, 
						   #{pet}, 
						   #{tel}, 
						   TOUR_DNO.NEXTVAL)
				SELECT * FROM DUAL
	</insert>
	<insert id="insertTourImg" 
			parameterType="tourImg">
		INSERT INTO TOUR_IMG(TIMG_NO 
							 , REF_TNO 
		                     , CHANGE_NO) 
		                VALUES(TIMG_NO.NEXTVAL 
		                     , TOUR_DNO.CURRVAL 
		                     , #{changeNo})
	</insert>
	
	<!-- 김동현 - 지역 좌표 호출 SQL문 -->
	<select id="getLocationCity"
			parameterType="_int"
			resultMap="resultSetCity">
	SELECT *
	FROM CITY
	WHERE SIGUNGU_CODE_NO = #{sigunguCodeNo}
	</select>
	
	<select id="getLocationArea"
			parameterType="_int"
			resultMap="resultSetArea">
	SELECT *
	FROM DISTRICTS
	WHERE LCODE_NO = #{areaCode}
	</select>
	<!-- 김동현 - 페이징 처리에 사용할 count값반환 -->
	<select id="selectTourListCount"
			parameterType="hashmap"
			resultType="_int">
	SELECT COUNT(*)
	FROM TOUR
	WHERE TOUR_TYPE = #{type}
	AND ADDRESS LIKE '%'||#{name}||'%'
	AND STATUS = 'Y'
	</select>
	<!-- 페이징이 추가된 여행지 조회 select 문 -->
	<select id="selectTourList"
			parameterType="hashmap"
			resultMap="tourResultSet">
	SELECT *
	FROM (SELECT ROWNUM RN, TT.*
	        FROM (SELECT *
	                FROM TOUR
	                WHERE ADDRESS LIKE '%'||#{name}||'%'
	                AND TOUR_TYPE = #{type}
	                AND STATUS = 'Y'
	                ORDER BY TOUR_NAME ASC) TT)
	WHERE RN BETWEEN ${start} AND ${end}
	
	</select>
	<!-- 나현성 - 상세보기 06.17 -->
	<!-- 관광지 -->
	<select id="tourSpotDetail"
			parameterType="_int"
			resultMap="tourSpotResultSet">
		SELECT *
		FROM TOUR_SPOT
		WHERE REF_TNO = #{tourNo}
	</select>
	
	<!-- 숙박시설 -->
	<select id="lodgingDetail"
			parameterType="_int"
			resultMap="lodgingResultSet">
		SELECT *
		FROM LODGING
		WHERE REF_TNO = #{tourNo}	
	</select>
	
	<!-- 식당/카페 -->
	<select id="restaurantDetail"
			parameterType="_int"
			resultMap="restaurantResultSet">
		SELECT *
		FROM RESTAURANT
		WHERE REF_TNO = #{tourNo}	
	</select>
	
	<!-- 레포츠 -->
	<select id="leportsDetail"
			parameterType="_int"
			resultMap="leportsResultSet">
		SELECT *
		FROM LEPORTS
		WHERE REF_TNO = #{tourNo}	
	</select>
	
	<!-- 이미지들 -->
	<select id="tourImgList"
			parameterType="_int"
			resultMap="tourImgResultSet">
		SELECT *
		FROM TOUR_IMG
		WHERE REF_TNO=#{tourNo}
	</select>
	
	<!-- 유진 - 관리자 여행지 조회 쿼리문 (Tour 객체에서만) (2024.06.19) -->
	<select id="getTourByNo" 
			parameterType="_int"
			resultMap="tourResultSet">
	    SELECT * 
	    	FROM TOUR 
	    WHERE TOUR_NO = #{tourNo} 
	</select>
	
	<!-- 유진 - 관리자 여행지 삭제 쿼리문 (2024.06.17) -->
	<update id="deleteTour" 
			parameterType="_int">
		UPDATE TOUR 
		   SET STATUS = 'N' 
		 WHERE TOUR_NO = #{tourNo}
		   AND STATUS = 'Y'
	</update>
</mapper>