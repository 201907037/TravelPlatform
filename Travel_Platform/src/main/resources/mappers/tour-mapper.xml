					 	  TOUR_TYPE 
					 	  MAP_X, 
					 	  MAP_Y) 
					VALUES(TOUR_DNO.CURRVAL, 
						   #{tourName}, 
						   #{address}, 
						   #{thumbImg}, 
						   #{tourtype}, 
						   #{mapX}, 
						   #{mapY}) 
			   INTO LODGING (L_NO, 
					 	  	 ROOM_TYPE, 
					 	  	 CHECK_IN, 
					 	  	 CHECK_OUT, 
					 	  	 COOK, 
					 	  	 TEL, 
					 	  	 PARKING, 
					 	  	 REF_TNO) 
					VALUES(A_DNO.NEXTVAL, 
						   #{roomType}, 
						   #{checkIn}, 
						   #{checkOut}, 
						   #{cook}, 
						   #{tel}, 
						   #{parking}, 
						   TOUR_DNO.NEXTVAL)
